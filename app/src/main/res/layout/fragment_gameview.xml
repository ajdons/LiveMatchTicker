<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/abc_ab_bottom_solid_dark_holo">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="vs."
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textColor="#ffcfcfcf" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/team1image"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:layout_toLeftOf="@+id/textView" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/team2image"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_toRightOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="50"
        android:id="@+id/team1score"
        android:layout_below="@+id/team1image"
        android:layout_alignLeft="@+id/team1image"
        android:layout_alignRight="@+id/team1image"
        android:gravity="center"
        android:textColor="#ffcfcfcf"
        android:textSize="32dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="50"
        android:id="@+id/team2score"
        android:layout_below="@+id/team2image"
        android:layout_alignLeft="@+id/team2image"
        android:layout_alignRight="@+id/team2image"
        android:gravity="center"
        android:textColor="#ffcfcfcf"
        android:textSize="32dp"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/team1logo"
        android:layout_below="@+id/team1score"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Unknown"
        android:id="@+id/team1name"
        android:layout_alignTop="@+id/team1logo"
        android:layout_toRightOf="@+id/team1logo"
        android:layout_alignBottom="@+id/team1logo"
        android:textColor="#ffcdcdcd"
        android:gravity="center"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/team1team"
        android:layout_below="@+id/team1logo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="20:00"
        android:id="@+id/timeelapsed"
        android:layout_above="@+id/team1name"
        android:layout_centerHorizontal="true"
        android:textColor="#ffcdcdcd" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/team2logo"
        android:layout_below="@+id/team1team"
        android:layout_marginTop="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Unknown"
        android:id="@+id/team2name"
        android:layout_alignTop="@+id/team2logo"
        android:layout_toRightOf="@+id/team2logo"
        android:layout_alignBottom="@+id/team2logo"
        android:gravity="center"
        android:textColor="#ffcdcdcd" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/team2team"
        android:layout_below="@+id/team2logo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/switch3"
        android:layout_alignTop="@+id/team1name"
        android:layout_alignBottom="@+id/team1name"
        android:layout_alignLeft="@+id/team2score"
        android:layout_alignStart="@+id/team2score"
        android:textOn="Items"
        android:textOff="Items"
        android:thumb="@drawable/my_btn_toggle"
        android:track="@drawable/my_btn_toggle_bg"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tower Status"
        android:textColor="#ffcdcdcd"
        android:id="@+id/towertitle"
        android:layout_marginTop="10dp"
        android:layout_below="@id/team2team"
        android:layout_centerHorizontal="true" />

<!-- =============================================================== -->
<!--                   All Radiant Towers                            -->
<!-- =============================================================== -->

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="5dp"
        android:id="@+id/rTopT1"
        android:layout_below="@+id/towertitle"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="5dp"
        android:id="@+id/rTopT2"
        android:layout_below="@+id/towertitle"
